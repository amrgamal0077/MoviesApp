<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/Trailer_video"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="TODO" android:src="@color/colorPrimary"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/Trailer_name"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Trailer Name"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/Trailer_video"
        app:layout_constraintStart_toEndOf="@+id/Trailer_video"
        app:layout_constraintTop_toTopOf="@+id/Trailer_video"
        />

</android.support.constraint.ConstraintLayout>